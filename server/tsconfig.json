{
    "compilerOptions": {
      "lib": [
        "es2017",
        "dom"
      ],
      "plugins": [
        { "transform": "@zerollup/ts-transform-paths" }
      ],
      "removeComments": true,
      "baseUrl": ".",
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }